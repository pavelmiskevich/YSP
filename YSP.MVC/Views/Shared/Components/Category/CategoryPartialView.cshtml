@model IEnumerable<Category>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Parent)</th>
            <th>@Html.DisplayNameFor(model => model.AddDate)</th>
            @*<th>@Html.DisplayNameFor(model => model.TimeStamp)</th>*@
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>   

